<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.bairuitech.anychat">

    <application
        android:name="com.bairuitech.anychat.common.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
                    android:name=".anychatfeatures.MainActivity"
                    android:configChanges="orientation|keyboardHidden|navigation"
                    android:label="@string/app_name" >
                    <intent-filter>
                        <action android:name="android.intent.action.MAIN" />

                        <category android:name="android.intent.category.LAUNCHER" />
                    </intent-filter>
                </activity>
                <activity
                    android:name=".funcActivity.VideoActivity"
                    android:configChanges="orientation|keyboardHidden|navigation" >
                    <intent-filter>
                        <category android:name="android.intent.category.DEFAULT" />
                    </intent-filter>
                </activity>
                <activity
                    android:name=".anychatfeatures.FuncMenu"
                    android:configChanges="orientation|keyboardHidden|navigation" >
                    <intent-filter>
                        <category android:name="android.intent.category.DEFAULT" />
                    </intent-filter>
                </activity>
                <activity
                    android:name=".anychatfeatures.RolesListActivity"
                    android:configChanges="orientation|keyboardHidden|navigation" >
                    <intent-filter>
                        <category android:name="android.intent.category.DEFAULT" />
                    </intent-filter>
                </activity>
                <activity
                    android:name=".funcActivity.ChatActivity"
                    android:configChanges="orientation|keyboardHidden|navigation"
                    android:launchMode="singleTask" >
                    <intent-filter>
                        <category android:name="android.intent.category.DEFAULT" />
                    </intent-filter>
                </activity>
                <activity
                    android:name=".funcActivity.AlphaChannel"
                    android:configChanges="orientation|keyboardHidden|navigation" >
                    <intent-filter>
                        <category android:name="android.intent.category.DEFAULT" />
                    </intent-filter>
                </activity>
                <activity
                    android:name=".funcActivity.FileTransfer"
                    android:configChanges="orientation|keyboardHidden|navigation" >
                    <intent-filter>
                        <category android:name="android.intent.category.DEFAULT" />
                    </intent-filter>
                </activity>
                <activity
                    android:name=".funcActivity.FileExplorer"
                    android:configChanges="orientation|keyboardHidden|navigation" >
                    <intent-filter>
                        <category android:name="android.intent.category.DEFAULT" />
                    </intent-filter>
                </activity>
                <activity
                    android:name=".funcActivity.LocalVideoRecord"
                    android:configChanges="orientation|keyboardHidden|navigation" >
                    <intent-filter>
                        <category android:name="android.intent.category.DEFAULT" />
                    </intent-filter>
                </activity>
                <activity
                    android:name=".funcActivity.ServerVideoRecord"
                    android:configChanges="orientation|keyboardHidden|navigation" >
                    <intent-filter>
                        <category android:name="android.intent.category.DEFAULT" />
                    </intent-filter>
                </activity>
                <activity
                    android:name=".funcActivity.VideoConfig"
                    android:configChanges="orientation|keyboardHidden|navigation" >
                    <intent-filter>
                        <category android:name="android.intent.category.DEFAULT" />
                    </intent-filter>
                </activity>
                <activity
                    android:name=".funcActivity.SingleSelfVideo"
                    android:configChanges="orientation|keyboardHidden|navigation" >
                    <intent-filter>
                        <category android:name="android.intent.category.DEFAULT" />
                    </intent-filter>
                </activity>
                <activity
                    android:name=".funcActivity.SenderTrace"
                    android:configChanges="orientation|keyboardHidden|navigation" >
                    <intent-filter>
                        <category android:name="android.intent.category.DEFAULT" />
                    </intent-filter>
                </activity>
                <activity
                    android:name=".funcActivity.ReceiverTrace"
                    android:configChanges="orientation|keyboardHidden|navigation" >
                    <intent-filter>
                        <category android:name="android.intent.category.DEFAULT" />
                    </intent-filter>
                </activity>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
</manifest>
